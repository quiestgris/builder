{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ service.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ service.details }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_admin_index') }}">back to list</a>

    <a href="{{ path('app_service_admin_edit', {'id': service.id}) }}">edit</a>

    {{ include('service_admin/_delete_form.html.twig') }}
{% endblock %}
